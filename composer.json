{
    "name": "telenok/telenok",
    "description": "The Telenok CMS",
    "keywords": ["framework", "laravel", "telenok"],
    "homepage": "http://telenok.com",
    "license": "commercial",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0.0",
        "telenok/core": "@dev",
        "filp/whoops": "1.*",
        "composer/composer": "@dev",
        "league/flysystem-aws-s3-v3": "^1.0",
        "orchestra/imagine": "~3.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"        
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan session:table",
            "php composer.phar dump-autoload",
            "Telenok\\Core\\Support\\Install\\Custom::postInstall",
            "php artisan telenok:package refresh",
            "php artisan queue:table",
            "php artisan queue:failed-table",
            "php artisan migrate"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "Telenok\\Core\\Support\\Install\\Custom::postUpdate",
            "php artisan telenok:package refresh"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
